<UserControl x:Class="Banking.Views.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banking.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="{DynamicResource m_Amount}" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48"/>
        <TextBlock HorizontalAlignment="Center"  Margin="290,10,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" x:Name="AmountBlock" FontSize="48"/>
        <Button Content="{DynamicResource m_NewBill}" HorizontalAlignment="Center"  Margin="0,111,0,0" VerticalAlignment="Top" Width="78" Click="Button_Click"/>

    </Grid>
</UserControl>
