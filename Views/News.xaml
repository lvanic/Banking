<UserControl x:Class="Banking.Views.News"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banking.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="72,74,0,0" Text="{DynamicResource m_Dollar}" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="184,74,0,0" Text="{DynamicResource m_Euro}" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="299,74,0,0" Text="{DynamicResource m_Pound}" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Grid Margin="400,0,-5,0" Background="#FF2E2E2E">

        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="59,95,0,0" Text="0/0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="USDBlock"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,98,0,0" Text="0/0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="EURBlock"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,95,0,0" Text="0/0" TextWrapping="Wrap" VerticalAlignment="Top" x:Name="GBPBlock"/>
    </Grid>
</UserControl>
