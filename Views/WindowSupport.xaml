<Window x:Class="Banking.Views.WindowSupport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banking.Views"
        mc:Ignorable="d"
        Title="WindowSupport" Height="450" Width="800"
        MaxHeight="450" MaxWidth="800">
    <Grid>
        <Grid  x:Name="WindowDisplay" Margin="191,82,0,0" Background="#FFCDCDCD"/>
        <Menu Style="{DynamicResource MenuLeft}" x:Name="MainMenu" MaxWidth="190" HorizontalAlignment="Left">

            <MenuItem Header="{DynamicResource m_Bills}" Width="186" Height="59"  FontSize="20" HorizontalAlignment="Left" Tag="0" Margin="0,82,0,0" Click="MenuItem_Click">

            </MenuItem>
            <MenuItem Header="{DynamicResource m_Messages}" Width="186" Height="59"  FontSize="20" HorizontalAlignment="Left" Tag="1" Click="MenuItem_Click">

            </MenuItem>

        </Menu>
        <Label Content="Id 0" HorizontalAlignment="Left" Margin="435,3,0,0" VerticalAlignment="Top" FontSize="48" x:Name="CurId"/>
    </Grid>
</Window>
