<UserControl x:Class="Banking.Views.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banking.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="Authorizathion" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48"/>
        <TextBox HorizontalAlignment="Center" Margin="0,103,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" x:Name="RegisterName"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,87,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,131,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Width="120" x:Name="RegisterPassword"/>
        <Button Content="Sign In" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Width="120" Click="SignIn_Click"/>
        <Label Content="Create account" HorizontalAlignment="Center" Margin="0,204,0,0" VerticalAlignment="Top" Width="118"/>
    </Grid>
</UserControl>
