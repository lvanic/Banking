<UserControl x:Class="Banking.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banking.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <Rectangle HorizontalAlignment="Center" Margin="0,305,0,-4" Stroke="Black" Width="584" Fill="Black"/>
        <Button Content="{DynamicResource m_Send}" HorizontalAlignment="Left" Margin="524,308,0,0" RenderTransformOrigin="0.515,-0.711" Width="55" Click="SendMessage"/>
        <TextBox HorizontalAlignment="Left" Margin="4,308,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="515" Height="20" x:Name="MessageText"/>

    </Grid>
</UserControl>
